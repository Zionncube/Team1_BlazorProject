@inject FinanceTrackerApp.Services.ToastService ToastService

@if (IsVisible)
{
    <div class="toast-container @Level.ToString().ToLower()">
        <div class="toast-icon">
            @switch (Level)
            {
                case FinanceTrackerApp.Services.ToastLevel.Success:
                    <span>✓</span>
                    break;
                case FinanceTrackerApp.Services.ToastLevel.Error:
                    <span>✕</span>
                    break;
                case FinanceTrackerApp.Services.ToastLevel.Warning:
                    <span>⚠</span>
                    break;
                default:
                    <span>ℹ</span>
                    break;
            }
        </div>
        <div class="toast-message">@Message</div>
        <button class="toast-close" @onclick="Close">✕</button>
    </div>
}

@code {
    private bool IsVisible { get; set; }
    private string? Message { get; set; }
    private FinanceTrackerApp.Services.ToastLevel Level { get; set; }

    protected override void OnInitialized()
    {
        ToastService.OnShow += ShowToast;
        ToastService.OnHide += HideToast;
    }

    private void ShowToast(string message, string heading, FinanceTrackerApp.Services.ToastLevel level)
    {
        InvokeAsync(() =>
        {
            Message = message;
            Level = level;
            IsVisible = true;
            StateHasChanged();
        });
    }

    private void HideToast()
    {
        InvokeAsync(() =>
        {
            IsVisible = false;
            StateHasChanged();
        });
    }

    private void Close()
    {
        IsVisible = false;
    }

    public void Dispose()
    {
        ToastService.OnShow -= ShowToast;
        ToastService.OnHide -= HideToast;
    }
}

<style>
    .toast-container {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.5rem;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        animation: slideIn 0.3s ease-out;
        color: white;
        min-width: 300px;
        max-width: 400px;
    }

    @@keyframes slideIn {
        from {
            transform: translateY(100%);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .toast-icon {
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
    }

    .toast-message {
        flex: 1;
        font-weight: 500;
        font-size: 0.95rem;
    }

    .toast-close {
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.7);
        cursor: pointer;
        padding: 0;
        font-size: 1rem;
        transition: color 0.2s;
    }

    .toast-close:hover {
        color: white;
    }

    /* Levels */
    .toast-container.success {
        border-left: 4px solid #2BEF83;
        background: linear-gradient(90deg, rgba(43, 239, 131, 0.1) 0%, rgba(20, 20, 20, 0.8) 100%);
    }
    .toast-container.success .toast-icon {
        color: #2BEF83;
        background: rgba(43, 239, 131, 0.2);
    }

    .toast-container.error {
        border-left: 4px solid #FF5A7A;
        background: linear-gradient(90deg, rgba(255, 90, 122, 0.1) 0%, rgba(20, 20, 20, 0.8) 100%);
    }
    .toast-container.error .toast-icon {
        color: #FF5A7A;
        background: rgba(255, 90, 122, 0.2);
    }

    .toast-container.warning {
        border-left: 4px solid #FFB81C;
        background: linear-gradient(90deg, rgba(255, 184, 28, 0.1) 0%, rgba(20, 20, 20, 0.8) 100%);
    }
    .toast-container.warning .toast-icon {
        color: #FFB81C;
        background: rgba(255, 184, 28, 0.2);
    }

    .toast-container.info {
        border-left: 4px solid #3ABFF8;
        background: linear-gradient(90deg, rgba(58, 191, 248, 0.1) 0%, rgba(20, 20, 20, 0.8) 100%);
    }
    .toast-container.info .toast-icon {
        color: #3ABFF8;
        background: rgba(58, 191, 248, 0.2);
    }
</style>
