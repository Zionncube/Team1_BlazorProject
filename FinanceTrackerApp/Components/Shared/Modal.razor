@using Microsoft.AspNetCore.Components
@rendermode InteractiveServer

@if (IsOpen)
{
    <div class="modal-overlay" @onclick="OnOverlayClick">
        <div class="app-modal glass" role="dialog" aria-modal="true" @onclick="SwallowClick" @onclick:stopPropagation="true">
            <div class="modal-head">
                <div>
                    <div class="modal-title">@Title</div>
                    @if (!string.IsNullOrWhiteSpace(Subtitle))
                    {
                        <div class="modal-sub">@Subtitle</div>
                    }
                </div>

                <button class="icon-btn" @onclick="Close" aria-label="Close dialog">
                    âœ•
                </button>
            </div>

            <div class="modal-body">
                @ChildContent
            </div>

            @if (FooterContent is not null)
            {
                <div class="modal-footer">
                    @FooterContent
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    [Parameter] public string Title { get; set; } = "Modal";
    [Parameter] public string? Subtitle { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? FooterContent { get; set; }

    private async Task Close()
    {
        await IsOpenChanged.InvokeAsync(false);
    }

    private async Task OnOverlayClick()
    {
        await Close();
    }

    private void SwallowClick()
    {
        // Prevent overlay close when clicking inside modal content.
    }
}
