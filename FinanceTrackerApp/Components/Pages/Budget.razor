@page "/budget"
@attribute [Authorize]
@rendermode InteractiveServer

@using FinanceTrackerApp.Services
@using FinanceTrackerApp.Models
@using FinanceTrackerApp.Components.Shared

@inject BudgetService BudgetService
@inject BudgetCalculationService CalculationService
@inject AuthService AuthService
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime

<div class="glass card">
    <div class="page-head">
        <div>
            <h2 style="margin:0;">Monthly Budget</h2>
            <p style="margin:.25rem 0 0 0;">Set and monitor your spending limits.</p>
        </div>

        <button class="btn btn-primary" @onclick="OpenAddModal">
            + Add Budget
        </button>
    </div>

    <!-- Month Navigation -->
    <div class="month-navigation glass">
        <button class="btn btn-sm" @onclick="PreviousMonth">‚Üê Previous</button>
        <div class="month-display">
            <span class="month-text">@CurrentMonthYear</span>
        </div>
        <button class="btn btn-sm" @onclick="NextMonth">Next ‚Üí</button>
    </div>

    <!-- Overspending Alerts -->
    @if (alerts.Any())
    {
        <OverspendingAlert Alerts="@alerts" />
    }

    <!-- Budget Summary -->
    @if (budgetSummary != null)
    {
        <div class="summary-grid glass">
            <div class="summary-item">
                <div class="summary-label">Total Budgeted</div>
                <div class="summary-value">@budgetSummary.TotalBudgeted.ToString("C0")</div>
            </div>
            <div class="summary-item">
                <div class="summary-label">Total Spent</div>
                <div class="summary-value accent">@budgetSummary.TotalSpent.ToString("C0")</div>
            </div>
            <div class="summary-item">
                <div class="summary-label">Remaining</div>
                <div class="summary-value @(budgetSummary.RemainingBudget < 0 ? "negative" : "positive")">
                    @budgetSummary.RemainingBudget.ToString("C0")
                </div>
            </div>
        </div>
    }

    <!-- Budget Cards -->
    <div class="budgets-container">
        @if (!budgetProgress.Any())
        {
            <div class="glass card empty-state">
                <div style="text-align: center; padding: 2rem;">
                    <div style="font-size: 2.5rem; margin-bottom: 1rem;">üìä</div>
                    <h3>No Budgets Set</h3>
                    <p>Create your first budget to start tracking your spending limits.</p>
                    <button class="btn btn-primary" @onclick="OpenAddModal">Create Budget</button>
                </div>
            </div>
        }
        else
        {
            @foreach (var budget in budgetProgress)
            {
                <div class="budget-item">
                    <BudgetCard
                        BudgetId="@budget.BudgetId"
                        CategoryName="@budget.CategoryName"
                        CategoryColor="@budget.CategoryColor"
                        BudgetLimit="@budget.BudgetLimit"
                        CurrentSpending="@budget.CurrentSpending" />
                    <div class="budget-actions">
                        <button class="btn btn-xs" @onclick="() => OpenEditModal(budget)">Edit</button>
                        <button class="btn btn-xs btn-danger" @onclick="() => DeleteBudget(budget)">Delete</button>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Add/Edit Modal -->
<Modal @bind-IsOpen="isModalOpen"
       Title="@(isEditMode ? "Edit Budget" : "Add Budget")"
       Subtitle="@(isEditMode ? "Update your budget settings." : "Set a new spending limit.")">
    <ChildContent>
        @if (!string.IsNullOrWhiteSpace(formError))
        {
            <div class="alert alert-danger">@formError</div>
        }

        <div class="form-group">
            <label>Category</label>
            <select class="input" @bind="selectedCategoryId">
                <option value="">-- Select a category --</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat.CategoryId">@cat.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Monthly Budget Limit</label>
            <div class="input-group">
                <span class="currency">¬£</span>
                <input type="number" class="input" step="0.01" min="0" @bind="budgetAmount" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Year</label>
                <input type="number" class="input" @bind="budgetYear" min="2020" max="2099" />
            </div>
            <div class="form-group">
                <label>Month</label>
                <select class="input" @bind="budgetMonth">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">@string.Format("{0:MMMM}", new DateTime(2000, i, 1))</option>
                    }
                </select>
            </div>
        </div>
    </ChildContent>
    <FooterContent>
        <button class="btn btn-primary" @onclick="SaveBudget">
            @(isEditMode ? "Update Budget" : "Create Budget")
        </button>
        <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
    </FooterContent>
</Modal>

@code {
    private List<BudgetProgressData> budgetProgress = new();
    private List<BudgetAlert> alerts = new();
    private BudgetSummary? budgetSummary;
    private List<Category> categories = new();

    private bool isModalOpen = false;
    private bool isEditMode = false;
    private string formError = "";

    private int currentYear = DateTime.Today.Year;
    private int currentMonth = DateTime.Today.Month;
    private string selectedMonth = "";
    
    // Form binding variables
    private Guid selectedCategoryId = Guid.Empty;
    private decimal budgetAmount = 0;
    private int budgetYear = 0;
    private int budgetMonth = 0;

    private string CurrentMonthYear => new DateTime(currentYear, currentMonth, 1).ToString("MMMM yyyy");

    protected override async Task OnInitializedAsync()
    {
        var userId = await AuthService.GetCurrentUserIdAsync();
        if (string.IsNullOrWhiteSpace(userId))
        {
            NavManager.NavigateTo("/login");
            return;
        }

        budgetYear = currentYear;
        budgetMonth = currentMonth;
        selectedMonth = $"{currentYear:0000}-{currentMonth:00}";
        await LoadCategories(userId);
        await RefreshBudgets(userId);
    }

    private async Task LoadCategories(string userId)
    {
        categories = await BudgetService.GetCategoriesAsync(userId);
    }

    private async Task RefreshBudgets(string? userId = null)
    {
        userId ??= await AuthService.GetCurrentUserIdAsync();
        if (string.IsNullOrWhiteSpace(userId)) return;

        budgetProgress = await CalculationService.GetBudgetProgressAsync(userId, currentYear, currentMonth);
        budgetSummary = await CalculationService.GetBudgetSummaryAsync(userId, currentYear, currentMonth);
        alerts = budgetSummary?.Alerts ?? new List<BudgetAlert>();
    }

    private async Task PreviousMonth()
    {
        currentMonth--;
        if (currentMonth < 1)
        {
            currentMonth = 12;
            currentYear--;
        }
        budgetYear = currentYear;
        budgetMonth = currentMonth;
        selectedMonth = $"{currentYear:0000}-{currentMonth:00}";
        await RefreshBudgets();
    }

    private async Task NextMonth()
    {
        currentMonth++;
        if (currentMonth > 12)
        {
            currentMonth = 1;
            currentYear++;
        }
        budgetYear = currentYear;
        budgetMonth = currentMonth;
        selectedMonth = $"{currentYear:0000}-{currentMonth:00}";
        await RefreshBudgets();
    }

    private void OpenAddModal()
    {
        isEditMode = false;
        selectedCategoryId = Guid.Empty;
        budgetAmount = 0;
        budgetYear = currentYear;
        budgetMonth = currentMonth;
        formError = "";
        isModalOpen = true;
    }

    private void OpenEditModal(BudgetProgressData budget)
    {
        isEditMode = true;
        formError = "";
        isModalOpen = true;
    }

    private void CloseModal()
    {
        isModalOpen = false;
    }

    private async Task SaveBudget()
    {
        var userId = await AuthService.GetCurrentUserIdAsync();
        if (string.IsNullOrWhiteSpace(userId)) return;

        if (selectedCategoryId == Guid.Empty)
        {
            formError = "Please select a category";
            return;
        }

        if (budgetAmount <= 0)
        {
            formError = "Budget limit must be greater than 0";
            return;
        }

        try
        {
            var newBudget = new Models.Budget
            {
                UserId = userId,
                CategoryId = selectedCategoryId,
                MonthlyLimit = budgetAmount,
                Year = budgetYear,
                Month = budgetMonth
            };

            await BudgetService.CreateBudgetAsync(newBudget);
            await RefreshBudgets(userId);
            CloseModal();
        }
        catch (Exception ex)
        {
            formError = $"Error saving budget: {ex.Message}";
        }
    }

    private async Task DeleteBudget(BudgetProgressData budget)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete the budget for {budget.CategoryName}?"))
        {
            try
            {
                await BudgetService.DeleteBudgetAsync(budget.BudgetId);
                var userId = await AuthService.GetCurrentUserIdAsync();
                await RefreshBudgets(userId);
            }
            catch (Exception ex)
            {
                formError = $"Error deleting budget: {ex.Message}";
            }
        }
    }
}

