@page "/transactions"
@attribute [Authorize]
@rendermode InteractiveServer

@using FinanceTrackerApp.Data
@using FinanceTrackerApp.Models
@using FinanceTrackerApp.Services
@using FinanceTrackerApp.Components.Shared

@inject TransactionService TransactionService
@inject AuthService AuthService
@inject CategoryService CategoryService
@inject NavigationManager NavigationManager

<div class="glass card">
    @if (!string.IsNullOrWhiteSpace(pageError))
    {
        <div class="alert">@pageError</div>
    }
    @if (!string.IsNullOrWhiteSpace(pageSuccess))
    {
        <div class="alert" style="background:#e8fff1;color:#0d6b35;border-color:#b8f2d0;">@pageSuccess</div>
    }

    <div class="page-head">
        <div>
            <h2 style="margin:0;">Transactions</h2>
            <p style="margin:.25rem 0 0 0;">Manage your income and expenses.</p>
        </div>

        <button class="btn btn-primary" @onclick="OpenAddPage">
            + Add Transaction
        </button>
    </div>

    <div class="filters glass">
        <input class="input"               
            placeholder="Search transactions..."               
            @bind="searchTerm" />

        <select class="input" @bind="selectedType">
            <option value="">All Types</option>
            <option value="income">Income</option>
            <option value="expense">Expense</option>
        </select>

        <select class="input" @bind="selectedCategory">
            <option value="">All Categories</option>
            @foreach (var cat in CategoryOptions)
            {
                <option value="@cat">@cat</option>
            }
        </select>
    </div>

    <div class="table glass">
        <div class="table-row table-head">
            <div>Date</div>
            <div>Description</div>
            <div>Category</div>
            <div>Type</div>
            <div style="text-align:right;">Amount</div>
            <div></div>
        </div>

        @if (!FilteredTransactions.Any())
        {
            <div class="table-row">
                <div class="muted">No transactions found</div>
            </div>
        }
        else
        {
            @foreach (var tx in FilteredTransactions)
            {
                var isIncome = tx.Type == "income";
                var badgeCss = isIncome ? "badge-income" : "badge-expense";
                var amountCss = isIncome ? "income" : "expense";
                var sign = isIncome ? "+" : "-";

                <div class="table-row">
                    <div class="muted">@tx.Date.ToString("MMM dd")</div>
                    <div class="strong">@tx.Description</div>
                    <div><span class="pill" style="@GetCategoryPillStyle(tx.Category)">@tx.Category</span></div>
                    <div><span class="badge @badgeCss">@tx.Type</span></div>
                    <div class="amount @amountCss" style="text-align:right;">
                        @sign @tx.Amount.ToString("C")
                    </div>
                    <div class="row-actions">
                        <button class="btn btn-xs" @onclick="() => OpenEditPage(tx.TransactionId)">Edit</button>
                        <button class="btn btn-xs btn-danger" @onclick="() => DeleteTransaction(tx)">Delete</button>
                    </div>
                </div>
            }
        }
    </div>
</div>

<Modal @bind-IsOpen="isModalOpen"       Title="@(isEditMode ? "Edit Transaction" : "Add Transaction")"
       Subtitle="@(isEditMode ? "Update the transaction details." : "Create a new transaction.")">

    <ChildContent>
        @if (!string.IsNullOrWhiteSpace(formError))
        {
            <div class="alert">@formError</div>
        }

        <div class="form-grid">
            <div class="field">
                <label>Amount</label>
                <input class="input" type="number" step="0.01" @bind="newTx.Amount" />
            </div>

            <div class="field">
                <label>Type</label>
                <select class="input" @bind="newTx.Type">
                    <option value="expense">Expense</option>
                    <option value="income">Income</option>
                </select>
            </div>

            <div class="field">
                <label>Category</label>
                @if (newTx.Type == "expense")
                {
                    <select class="input" @bind="newTx.Category">
                        @foreach (var category in EditableCategoryOptions)
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                }
                else if (newTx.Type == "income")
                {
                    <select class="input" @bind="newTx.Category">
                        @foreach (var category in EditableCategoryOptions)
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                }
            </div>

            <div class="field">
                <label>Description</label>
                <input class="input" @bind="newTx.Description" />
            </div>

            <div class="field">
                <label>Date</label>
                <input type="date" class="input" @bind="newTx.Date" @bind:format="yyyy-MM-dd" />
            </div>
        </div>
    </ChildContent>

    <FooterContent>
        <button class="btn btn-ghost" @onclick="CloseModal">Cancel</button>
        <button class="btn btn-primary" @onclick="SaveTransaction">
            @(isEditMode ? "Update" : "Save")
        </button>
    </FooterContent>
</Modal>

@code {
    private bool isModalOpen;
    private bool isEditMode;
    private Guid editingTransactionId;

    private string currentUserId = "";
    private string formError = "";
    private string pageError = "";
    private string pageSuccess = "";
    private string searchTerm = "";
    private string selectedType = "";
    private string selectedCategory = "";

    private Transaction newTx = new();
    private List<Transaction> transactions = new();
    private List<Category> userCategories = new();
    private Dictionary<string, string> categoryColors = new(StringComparer.OrdinalIgnoreCase);

    protected override async Task OnInitializedAsync()
    {
        currentUserId = await AuthService.GetCurrentUserIdAsync();
        userCategories = await CategoryService.GetByUserAsync(currentUserId);
        categoryColors = userCategories.ToDictionary(c => c.Name, c => c.Color, StringComparer.OrdinalIgnoreCase);
        transactions = await TransactionService.GetTransactionsAsync(currentUserId);
        ResetNewTransaction();
    }

    private void OpenAddModal()
    {
        isEditMode = false;
        ResetNewTransaction();
        isModalOpen = true;
    }

    private void OpenAddPage()
    {
        NavigationManager.NavigateTo("/add-transaction");
    }

    private void OpenEditPage(Guid transactionId)
    {
        NavigationManager.NavigateTo($"/edit-transaction/{transactionId}");
    }

    private void OpenEditModal(Transaction tx)
    {
        isEditMode = true;
        editingTransactionId = tx.TransactionId;
        newTx = new Transaction
        {
            TransactionId = tx.TransactionId,
            Amount = tx.Amount,
            Type = tx.Type,
            Category = tx.Category,
            Description = tx.Description,
            Date = tx.Date,
            UserId = tx.UserId
        };
        isModalOpen = true;
    }

    private async Task SaveTransaction()
    {
        pageError = "";
        pageSuccess = "";
        formError = "";

        if (newTx.Amount <= 0 || string.IsNullOrWhiteSpace(newTx.Description))
        {
            formError = "Please enter a valid amount and description.";
            return;
        }

        // tie transaction to current user
        newTx.UserId = currentUserId;

        try
        {
            if (isEditMode)
            {
                newTx.TransactionId = editingTransactionId;
                await TransactionService.UpdateTransactionAsync(newTx);
                pageSuccess = "Transaction updated.";
            }
            else
            {
                newTx.TransactionId = Guid.NewGuid();
                await TransactionService.AddTransactionAsync(newTx);
                pageSuccess = "Transaction added.";
            }

            transactions = await TransactionService.GetTransactionsAsync(currentUserId);
            CloseModal();
        }
        catch
        {
            pageError = "Could not save transaction right now. Please try again.";
        }
    }

    private async Task DeleteTransaction(Transaction tx)
    {
        pageError = "";
        pageSuccess = "";
        try
        {
            await TransactionService.DeleteTransactionAsync(tx.TransactionId);
            transactions.Remove(tx);
            pageSuccess = "Transaction deleted.";
        }
        catch
        {
            pageError = "Could not delete transaction right now. Please try again.";
        }
    }

    private void CloseModal()
    {
        isModalOpen = false;
        formError = "";
        ResetNewTransaction();
    }

    private void ResetNewTransaction()
    {
        newTx = new Transaction
        {
            Type = "expense",
            Date = DateTime.Today
        };
    }

    private IEnumerable<string> CategoryOptions =>
        userCategories
            .Select(c => c.Name)
            .Concat(transactions.Select(t => t.Category))
            .Where(c => !string.IsNullOrWhiteSpace(c))
            .Distinct(StringComparer.OrdinalIgnoreCase)
            .OrderBy(c => c);

    private IEnumerable<string> EditableCategoryOptions =>
        userCategories.Select(c => c.Name)
            .Where(n => !string.IsNullOrWhiteSpace(n))
            .DefaultIfEmpty("General")
            .Distinct(StringComparer.OrdinalIgnoreCase)
            .OrderBy(c => c);

    private IEnumerable<Transaction> FilteredTransactions =>
        transactions
            .Where(t =>
                (string.IsNullOrWhiteSpace(searchTerm) ||
                 t.Description.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                 t.Category.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                && (string.IsNullOrWhiteSpace(selectedType) || t.Type == selectedType)
                && (string.IsNullOrWhiteSpace(selectedCategory) || t.Category == selectedCategory))
            .OrderByDescending(t => t.Date);

    private string GetCategoryPillStyle(string? category)
    {
        if (!string.IsNullOrWhiteSpace(category) && categoryColors.TryGetValue(category, out var color) && !string.IsNullOrWhiteSpace(color))
        {
            return $"background:{color}; color:#111;";
        }
        return string.Empty;
    }
}
